{
  "manifest_version": 3,
  "name": "ChatGPT Q&A to PDF",
  "version": "1.0",
  "description": "Save ChatGPT Q&A as a PDF",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://chat.openai.com/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["*://chat.openai.com/*"]
}
